#!/usr/bin/env ruby

require "yaml"
deployment_config_path =
  (YAML.load_file(File.expand_path("deployment.yml", ARGV[0])) rescue {}).
  fetch("heroku", {}).fetch("project_path", ".")
ARGV[0] = File.expand_path(deployment_config_path, ARGV[0])
Dir.chdir(ARGV[0])

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

if pack = LanguagePack.detect(ARGV.first)
  puts pack.name
  exit 0
else
  puts "no"
  exit 1
end
